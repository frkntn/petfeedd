<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/puppy_bg"
    tools:context="com.example.furkan.petfeedd.MainActivity">



    <Button
        android:background="@drawable/buttonshape"
        android:text="Log in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:id="@+id/btn_log"
        android:onClick="onlogin"
        android:layout_below="@+id/et_pas"
        android:layout_centerHorizontal="true" />



    <TextView
        android:text="PASSWORD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:id="@+id/tv_pass"
        android:textSize="18sp"
        android:layout_below="@+id/tv_id"
        android:layout_alignLeft="@+id/tv_id"
        android:layout_alignStart="@+id/tv_id"
        android:gravity="center"
        android:textStyle="bold" />
    <TextView
        android:text="ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_id"
        android:layout_marginTop="52dp"
        android:textSize="18sp"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:id="@+id/et_id"
        android:hint="Enter Id"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:layout_below="@+id/tv_id"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_pas"
        android:hint="Enter Password"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tv_pass"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:inputType="textPassword" />
</RelativeLayout>
